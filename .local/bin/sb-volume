#!/bin/bash

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -w -f "$TERMINAL" -e pulseaudio-ctl; pkill -RTMIN+10 "${STATUSBAR:-dwmblocks}" ;;
	2) pulseaudio-ctl mute ;;
	4) pulseaudio-ctl up ;;
	5) pulseaudio-ctl down ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

vol="$(pulseaudio-ctl full-status | awk '{print $1}')"
mvol="$(pulseaudio-ctl full-status | awk '{print $2}')"

# If muted, print ðŸ”‡ and exit.
[ "$mvol" = "yes" ] && echo "ðŸ”‡$vol%" && exit

vol="${vol%\%}"

case 1 in
	$((vol >= 70)) ) icon="ðŸ”Š" ;;
	$((vol >= 30)) ) icon="ðŸ”‰" ;;
	$((vol >= 1)) ) icon="ðŸ”ˆ" ;;
	* ) echo "ðŸ”‡" && exit ;;
esac

echo "$vol%"

